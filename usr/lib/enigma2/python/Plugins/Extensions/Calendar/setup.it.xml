<setupxml>
	<setup key="settingCalendar" title="Impostazioni Calendario">
		<!-- Event System -->
		<item level="1" text="Impostazioni Eventi" description="Sistema di gestione eventi"/>
		<!-- Display Settings -->
		<item level="0" text="Mostra Calendario nel menu:" description="Mostra il Calendario nel menu informazioni principale.">config.plugins.calendar.menu</item>
		<!-- Event Settings -->
		<item level="0" text="Abilita sistema eventi" description="Abilita la gestione eventi con data/ora.">config.plugins.calendar.events_enabled</item>
		<if conditional="config.plugins.calendar.events_enabled.value">
			<item level="0" text="Abilita notifiche" description="Mostra notifiche per eventi imminenti.">config.plugins.calendar.events_notifications</item>
			<if conditional="config.plugins.calendar.events_notifications.value">
				<item level="0" text="Riproduci suono con notifiche" description="Riproduci un suono quando appare la notifica dell'evento.">config.plugins.calendar.events_play_sound</item>
				<item level="0" text="Tipo di suono notifica" description="Tipo di suono da riprodurre con le notifiche.">config.plugins.calendar.events_sound_type</item>
			</if>
			<item level="0" text="Mostra indicatori eventi" description="Mostra marcatori sui giorni con eventi.">config.plugins.calendar.events_show_indicators</item>
			<if conditional="config.plugins.calendar.events_show_indicators.value">
				<item level="0" text="Colore eventi" description="Colore per i giorni con eventi.">config.plugins.calendar.events_color</item>
			</if>
		</if>
		<!-- Holiday Settings -->
		<item level="1" text="Impostazioni Festività" description="Visualizzazione e colorazione festività"/>
		<item level="0" text="Abilita colorazione festività" description="Colora i giorni con festività.">config.plugins.calendar.holidays_enabled</item>
		<if conditional="config.plugins.calendar.holidays_enabled.value">
			<item level="0" text="Mostra indicatori festività" description="Mostra marcatore 'H' sui giorni festivi.">config.plugins.calendar.holidays_show_indicators</item>
			<item level="0" text="Colore festività" description="Colore per i giorni festivi.">config.plugins.calendar.holidays_color</item>
		</if>
		<item level="1" text="Impostazioni Debug" description="Opzioni di debug e logging"/>
		<item level="0" text="Abilita modalità debug" description="Mostra messaggi di debug in console/log.">config.plugins.calendar.debug_enabled</item>
	</setup>
</setupxml>