<setupxml>
	<setup key="settingCalendar" title="Nastavitve Koledarja">
		<!-- Event System -->
		<item level="1" text="Nastavitve Dogodkov" description="Sistem za upravljanje dogodkov"/>
		<!-- Display Settings -->
		<item level="0" text="Prikaži Koledar v meniju:" description="Prikaži Koledar v glavnem informacijskem meniju.">config.plugins.calendar.menu</item>
		<!-- Event Settings -->
		<item level="0" text="Omogoči sistem dogodkov" description="Omogoči upravljanje dogodkov z datumom/uro.">config.plugins.calendar.events_enabled</item>
		<if conditional="config.plugins.calendar.events_enabled.value">
			<item level="0" text="Omogoči obvestila" description="Prikaži obvestila za prihajajoče dogodke.">config.plugins.calendar.events_notifications</item>
			<if conditional="config.plugins.calendar.events_notifications.value">
				<item level="0" text="Predvajaj zvok z obvestili" description="Predvajaj zvok, ko se prikaže obvestilo o dogodku.">config.plugins.calendar.events_play_sound</item>
				<item level="0" text="Vrsta zvoka za obvestila" description="Vrsta zvoka za predvajanje z obvestili.">config.plugins.calendar.events_sound_type</item>
			</if>
			<item level="0" text="Prikaži označevalnike dogodkov" description="Prikaži označevalnike na dneh z dogodki.">config.plugins.calendar.events_show_indicators</item>
			<if conditional="config.plugins.calendar.events_show_indicators.value">
				<item level="0" text="Barva dogodkov" description="Barva za dneve z dogodki.">config.plugins.calendar.events_color</item>
			</if>
		</if>
		<!-- Holiday Settings -->
		<item level="1" text="Nastavitve Praznikov" description="Prikaz in barvanje praznikov"/>
		<item level="0" text="Omogoči barvanje praznikov" description="Obarvaj dneve s prazniki.">config.plugins.calendar.holidays_enabled</item>
		<if conditional="config.plugins.calendar.holidays_enabled.value">
			<item level="0" text="Prikaži označevalnike praznikov" description="Prikaži označevalnik 'H' na dneh s prazniki.">config.plugins.calendar.holidays_show_indicators</item>
			<item level="0" text="Barva praznikov" description="Barva za praznične dneve.">config.plugins.calendar.holidays_color</item>
		</if>
		<item level="1" text="Nastavitve Razhroščevanja" description="Možnosti za razahroščevanje in beleženje"/>
		<item level="0" text="Omogoči način razhroščevanja" description="Prikaži sporočila za razhroščevanje v konzoli/dnevniku.">config.plugins.calendar.debug_enabled</item>
	</setup>
</setupxml>