<setupxml>
	<setup key="settingCalendar" title="Kalender-Einstellungen">
		<!-- Event System -->
		<item level="1" text="Ereignis-Einstellungen" description="Ereignisverwaltungssystem"/>
		<!-- Display Settings -->
		<item level="0" text="Kalender im Menü anzeigen:" description="Kalender im Hauptinformationsmenü anzeigen.">config.plugins.calendar.menu</item>
		<!-- Event Settings -->
		<item level="0" text="Ereignissystem aktivieren" description="Ereignisverwaltung mit Datum/Uhrzeit aktivieren.">config.plugins.calendar.events_enabled</item>
		<if conditional="config.plugins.calendar.events_enabled.value">
			<item level="0" text="Benachrichtigungen aktivieren" description="Benachrichtigungen für bevorstehende Ereignisse anzeigen.">config.plugins.calendar.events_notifications</item>
			<if conditional="config.plugins.calendar.events_notifications.value">
				<item level="0" text="Ton bei Benachrichtigungen abspielen" description="Einen Ton abspielen, wenn eine Ereignisbenachrichtigung erscheint.">config.plugins.calendar.events_play_sound</item>
				<item level="0" text="Benachrichtigungston-Typ" description="Art des Tons, der bei Benachrichtigungen abgespielt werden soll.">config.plugins.calendar.events_sound_type</item>
			</if>
			<item level="0" text="Ereignisanzeigen anzeigen" description="Markierungen auf Tagen mit Ereignissen anzeigen.">config.plugins.calendar.events_show_indicators</item>
			<if conditional="config.plugins.calendar.events_show_indicators.value">
				<item level="0" text="Ereignisfarbe" description="Farbe für Tage mit Ereignissen.">config.plugins.calendar.events_color</item>
			</if>
		</if>
		<!-- Holiday Settings -->
		<item level="1" text="Feiertags-Einstellungen" description="Feiertagsanzeige und -färbung"/>
		<item level="0" text="Feiertagsfärbung aktivieren" description="Tage mit Feiertagen färben.">config.plugins.calendar.holidays_enabled</item>
		<if conditional="config.plugins.calendar.holidays_enabled.value">
			<item level="0" text="Feiertagsanzeigen anzeigen" description="'H'-Markierung auf Feiertagen anzeigen.">config.plugins.calendar.holidays_show_indicators</item>
			<item level="0" text="Feiertagsfarbe" description="Farbe für Feiertage.">config.plugins.calendar.holidays_color</item>
		</if>
		<item level="1" text="Debug-Einstellungen" description="Debug- und Protokollierungsoptionen"/>
		<item level="0" text="Debug-Modus aktivieren" description="Debug-Meldungen in Konsole/Protokoll anzeigen.">config.plugins.calendar.debug_enabled</item>
	</setup>
</setupxml>