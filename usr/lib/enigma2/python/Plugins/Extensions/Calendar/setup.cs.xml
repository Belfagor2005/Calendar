<setupxml>
	<setup key="settingCalendar" title="Nastavení Kalendáře">
		<!-- Systém událostí -->
		<item level="1" text="Nastavení Událostí" description="Systém pro správu událostí"/>
		<!-- Nastavení zobrazení -->
		<item level="0" text="Zobrazit Kalendář v menu:" description="Zobrazit Kalendář v hlavním informačním menu.">config.plugins.calendar.menu</item>
		<!-- Nastavení událostí -->
		<item level="0" text="Povolit systém událostí" description="Povolit správu událostí s datumem/časem.">config.plugins.calendar.events_enabled</item>
		<if conditional="config.plugins.calendar.events_enabled.value">
			<item level="0" text="Povolit upozornění" description="Zobrazovat upozornění na nadcházející události.">config.plugins.calendar.events_notifications</item>
			<if conditional="config.plugins.calendar.events_notifications.value">
				<item level="0" text="Přehrát zvuk s upozorněními" description="Přehrát zvuk při zobrazení upozornění na událost.">config.plugins.calendar.events_play_sound</item>
				<item level="0" text="Typ zvuku upozornění" description="Typ zvuku pro přehrávání s upozorněními.">config.plugins.calendar.events_sound_type</item>
			</if>
			<item level="0" text="Zobrazit indikátory událostí" description="Zobrazit značky na dnech s událostmi.">config.plugins.calendar.events_show_indicators</item>
			<if conditional="config.plugins.calendar.events_show_indicators.value">
				<item level="0" text="Barva událostí" description="Barva pro dny s událostmi.">config.plugins.calendar.events_color</item>
			</if>
		</if>
		<!-- Nastavení svátků -->
		<item level="1" text="Nastavení Svátků" description="Zobrazení a barevné označení svátků"/>
		<item level="0" text="Povolit barevné označení svátků" description="Barevně označit dny se svátky.">config.plugins.calendar.holidays_enabled</item>
		<if conditional="config.plugins.calendar.holidays_enabled.value">
			<item level="0" text="Zobrazit indikátory svátků" description="Zobrazit značku 'H' na dnech se svátky.">config.plugins.calendar.holidays_show_indicators</item>
			<item level="0" text="Barva svátků" description="Barva pro sváteční dny.">config.plugins.calendar.holidays_color</item>
		</if>
		<item level="1" text="Nastavení Ladění" description="Možnosti ladění a logování"/>
		<item level="0" text="Povolit režim ladění" description="Zobrazovat ladící zprávy v konzole/logu.">config.plugins.calendar.debug_enabled</item>
	</setup>
</setupxml>