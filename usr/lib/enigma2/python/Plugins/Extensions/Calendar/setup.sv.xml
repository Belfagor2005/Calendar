<setupxml>
	<setup key="settingCalendar" title="Kalenderinställningar">
		<!-- Event System -->
		<item level="1" text="Händelseinställningar" description="Händelsehanteringssystem"/>
		<!-- Display Settings -->
		<item level="0" text="Visa Kalender i meny:" description="Visa Kalender i huvudinformationsmenyn.">config.plugins.calendar.menu</item>
		<!-- Event Settings -->
		<item level="0" text="Aktivera händelsesystem" description="Aktivera händelsehantering med datum/tid.">config.plugins.calendar.events_enabled</item>
		<if conditional="config.plugins.calendar.events_enabled.value">
			<item level="0" text="Aktivera notifieringar" description="Visa notifieringar för kommande händelser.">config.plugins.calendar.events_notifications</item>
			<if conditional="config.plugins.calendar.events_notifications.value">
				<item level="0" text="Spela upp ljud med notifieringar" description="Spela upp ett ljud när händelsenotifiering visas.">config.plugins.calendar.events_play_sound</item>
				<item level="0" text="Notifieringsljudtyp" description="Typ av ljud att spela upp med notifieringar.">config.plugins.calendar.events_sound_type</item>
			</if>
			<item level="0" text="Visa händelseindikatorer" description="Visa markörer på dagar med händelser.">config.plugins.calendar.events_show_indicators</item>
			<if conditional="config.plugins.calendar.events_show_indicators.value">
				<item level="0" text="Händelsefärg" description="Färg för dagar med händelser.">config.plugins.calendar.events_color</item>
			</if>
		</if>
		<!-- Holiday Settings -->
		<item level="1" text="Helginsinställningar" description="Helginsvisning och färgläggning"/>
		<item level="0" text="Aktivera helginsfärgläggning" description="Färglägg dagar med helgdagar.">config.plugins.calendar.holidays_enabled</item>
		<if conditional="config.plugins.calendar.holidays_enabled.value">
			<item level="0" text="Visa helginsindikatorer" description="Visa 'H'-markör på helgdagar.">config.plugins.calendar.holidays_show_indicators</item>
			<item level="0" text="Helginsfärg" description="Färg för helgdagar.">config.plugins.calendar.holidays_color</item>
		</if>
		<item level="1" text="Felsökningsinställningar" description="Felsöknings- och loggningsalternativ"/>
		<item level="0" text="Aktivera felsökningsläge" description="Visa felsökningsmeddelanden i konsol/logg.">config.plugins.calendar.debug_enabled</item>
	</setup>
</setupxml>